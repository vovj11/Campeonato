@model Campeonato.Models.Placar

@{
    ViewData["Title"] = "Create";
}

<h2>Novo placar</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JogadorId" class="control-label"></label>
                <select asp-for="JogadorId" class ="form-control" asp-items="ViewBag.JogadorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TotalPontos" class="control-label"></label>
                <input asp-for="TotalPontos" class="form-control" />
                <span asp-validation-for="TotalPontos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioId" class="control-label"></label>
                <input asp-for="HorarioId" class="form-control" />
                <span asp-validation-for="HorarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
